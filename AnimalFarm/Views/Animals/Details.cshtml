@{
  Layout = "_Layout";
}

@model AnimalFarm.Models.Animal

<h2>Animal Details</h2>
<hr />
<h3>@Html.Label("Animal Name: ") @Html.DisplayFor(model => model.AnimalName)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This animal does not belong to any trainers</p>
  <p>Animal Type: @Html.DisplayFor(model => model.AnimalType)</p>
}
else
{
  <h4>Trainers the animal belongs to:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Trainer.TrainerName</li>
  }
  <p>Animal Type: @Html.DisplayFor(model => model.AnimalType)</p>
  </ul>
}

<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Edit Animal", "Edit", new { id = Model.AnimalId })</p>
<p>@Html.ActionLink("Delete Animal", "Delete", new { id = Model.AnimalId })</p>
<p>@Html.ActionLink("Add a Trainer", "AddTrainer", new { id = Model.AnimalId })</p>